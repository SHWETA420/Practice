@using Model.USER
@model Login

@{
    ViewData["Title"] = "LoginPage";
}

<div class="container d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="col-md-6 d-flex flex-column align-items-center mx-auto">
        <div class="text-center">
            <div class="mb-0">
                <i class="bi bi-person-circle" style="font-size: 60px; color: teal;"></i>
            </div>
            <h4 class="text-teal fs-2 fw-bold mb-4">WELCOME</h4>
        </div>
        <div class="card p-4 shadow-lg" style="width: 500px; background-color: white; opacity: 0.9">
            <div class="card-body">
                <form asp-action="LoginPage">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="Email address" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" id="password" />
                            <button type="button" class="btn btn-outline-dark" id="togglePassword">Show</button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="#" class="text-dark" style="font-size:14px; font-weight: 600">Forgot password?</a>
                    </div>
                    <div class="form-group text-center mt-3">
                        <input type="submit" value="Login" class="btn btn-teal w-100 bg-black text-white" />
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-3">
            New to us? <a asp-controller="LoginRegister" asp-action="SignUpPage" class="text-teal fw-bold">Sign Up</a>
        </div>
    </div>
</div>



@section Scripts {
    <script src="d:\practice\mvcproject\mvcproject\wwwroot\js\loginpage.js"></script>
       
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    #togglePassword {
        background-color: transparent;
        border-color: teal;
        color: teal;
        transition: all 0.3s ease-in-out;
    }

        #togglePassword:hover {
            background-color: teal;
            color: white;
            border-color: teal;
        }
</style>


