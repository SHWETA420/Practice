@using Model.USER
@model User

@{
    ViewData["Title"] = "SignUpPage";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 400px;">
        <div class="text-center">
            <i class="bi bi-person-circle" style="font-size: 60px; color: teal;"></i>
            <h3 class="fw-bold">Sign Up</h3>
        </div>

        <form asp-action="SignUpPage" id="SignUpPage" enctype="multipart/form-data" onsubmit="return submitForm(event);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                <input asp-for="FullName" id="FullName" class="form-control" placeholder="Enter your name" required/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" id="Email" class="form-control" placeholder="Enter your email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold">Password</label>
                <input asp-for="Password" id="Password" type="password" class="form-control" placeholder="Enter your password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdentityImage" class="form-label fw-bold">Upload Identity Image</label>
                <input asp-for="IdentityImage" id="IdentityImage" type="file" class="form-control" accept="image/*"  />
                <span asp-validation-for="IdentityImage" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-dark">Create Account</button>
            </div>

            <div class="mt-3 text-center">
                Already have an account?
                <a asp-controller="LoginRegister" asp-action="LoginPage" class="text-teal fw-bold">Login</a>
            </div>
        </form>
        <div id="successAlert" class="alert alert-success mt-3 d-none" role="alert">
        </div>
    </div>
</div>



@section Scripts {
    <script src="d:\practice\mvcproject\mvcproject\wwwroot\js\loginpage.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
